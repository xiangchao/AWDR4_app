.cart_title Your Pragmatic Cart
%table
  - @cart.line_items.each do |item|
    %tr
      %td
        = item.quantity
        &times;
      %td= item.product.title
      %td.total_cell= number_to_currency(item.total_price, :unit => '&pound;')
      
  %tr.total_line
    %td{:colspan => '2'} Total
    %td.total_cell= number_to_currency(@cart.total_price, :unit => '&pound;')
      
= button_to 'Empty cart', @cart, :method => :delete, :confirm => 'Are you sure?'
