- if line_item == @current_item
  %tr#current_item
    %td!= "#{line_item.quantity}&times;"
    %td= line_item.product.title
    %td.item_price= number_to_currency(line_item.total_price)#, :unit => '&pound;')
- else
  %tr
    %td!= "#{line_item.quantity}&times;"
    %td= line_item.product.title
    %td.item_price= number_to_currency(line_item.total_price)#, :unit => '&pound;')